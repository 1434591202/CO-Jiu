
.bgImg{
	width: 100%;
	height:580rpx;
}
.bgBox{
	width: 100%;
	height: 500rpx;
	background-color: #ffffff;
	border-top-left-radius: 35rpx;
	border-top-right-radius: 35rpx;
	position: absolute;
	top: 540rpx;
	box-shadow: 0rpx -10rpx 10rpx #0c0c0c;
	text-align: center;
	padding-top:180rpx ;
}
.bgBox>text{
	font-size: 50rpx;
}
.bgBox>view{
	width: 250rpx;
	height: 70rpx;
	background-color:rgba(56,154,188,0.2);
	color: #F0AD4E;
	margin: 100rpx auto;
	border-radius: 15rpx;
	line-height: 70rpx;
}

